{
    "class": "Menu",
    "params": [ "${game}" ],
    "children": [
        {
            "class": "Label",
            "params": [
                { "constraint": "const", "val": 0 },
                { "constraint": "const", "val": 0 },
                { "constraint": "rel", "obj": "${game}", "attr": "WIDTH", "ratio": 1.0 },
                { "constraint": "rel", "obj": "${game}", "attr": "HEIGHT", "ratio": 0.1 },
                "Settings",
                { "name": "font_size", "val": 40 }
            ]
        },
        {
            "class": "Checkbox",
            "params": [
                { "constraint": "rel", "obj": "${game}", "attr": "WIDTH", "ratio": 0.3 },
                { "constraint": "rel", "obj": "${game}", "attr": "HEIGHT", "ratio": 0.15 },
                { "constraint": "rel", "obj": "${game}", "attr": "WIDTH", "ratio": 0.4 },
                { "constraint": "rel", "obj": "${game}", "attr": "HEIGHT", "ratio": 0.05 },
                "Test checkbox",
                "${game.cb_checkbox}",
                [ "test_checkbox" ],
                { "name": "name", "val": "test_checkbox" }
            ]
        },
        {
            "class": "Slider",
            "params": [
                { "constraint": "rel", "obj": "${game}", "attr": "WIDTH", "ratio": 0.375 },
                { "constraint": "rel", "obj": "${game}", "attr": "HEIGHT", "ratio": 0.30 },
                { "constraint": "rel", "obj": "${game}", "attr": "WIDTH", "ratio": 0.25 },
                { "constraint": "rel", "obj": "${game}", "attr": "HEIGHT", "ratio": 0.05 },
                0,
                10,
                1,
                "${game.cb_checkbox}",
                [ "test_slider" ],
                { "name": "name", "val": "test_slider" }
            ]
        },
        {
            "class": "Button",
            "params": [
                { "constraint": "rel", "obj": "${game}", "attr": "WIDTH", "ratio": 0.25 },
                { "constraint": "rel", "obj": "${game}", "attr": "HEIGHT", "ratio": 0.7 },
                { "constraint": "rel", "obj": "${game}", "attr": "WIDTH", "ratio": 0.5 },
                { "constraint": "rel", "obj": "${game}", "attr": "HEIGHT", "ratio": 0.1 },
                "Return to main menu",
                "${game.cb_exit_settings}"
            ]
        }
    ]
}